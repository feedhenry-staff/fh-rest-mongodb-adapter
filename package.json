{
  "name": "fh-rest-mongodb-adapter",
  "version": "0.1.0",
  "description": "Adapter that simplifies exposing RESTful APIs for a MongoDB collection",
  "main": "lib/adapter.js",
  "scripts": {
    "linelint": "linelint $(ls lib/*.js)",
    "jshint": "jshint $(ls lib/*.js)",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "cover": "istanbul cover -x *.test.js _mocha $(ls lib/*.test.js)",
    "example": "node example/server.js | bunyan",
    "format": "npm run linelint && npm run jshint",
    "unit": "mocha $(ls lib/*.test.js)",
    "test": "npm run format && npm run unit && npm run cover && npm run check-coverage"
  },
  "author": "Evan Shortiss",
  "license": "MIT",
  "devDependencies": {
    "chai": "^3.5.0",
    "express": "^4.14.0",
    "fh-rest-express-router": "~0.3.2",
    "istanbul": "^0.4.3",
    "jshint": "^2.9.2",
    "linelint": "^1.0.0",
    "mocha": "^2.5.3",
    "proxyquire": "^1.7.9",
    "sinon": "^1.17.4"
  },
  "dependencies": {
    "async": "^2.0.0",
    "env-var": "^1.0.0",
    "fh-bunyan": "^0.1.3",
    "fh-rest-express-router": "~0.3.2",
    "is-object": "^1.0.1",
    "lodash.map": "^4.4.0",
    "mongo-utils": "git+https://github.com/evanshortiss/mongo-utils.git#0.2.0",
    "verror": "^1.6.1"
  }
}
